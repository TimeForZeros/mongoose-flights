<section id="show-page">
  <div>Airline: <%=flight.airline %></div>
  <div>Airport: <%=flight.airport %></div>
  <div>Flight Number: <%= flight.flightNo %> </div>
  <div>Departure Time: <%= flight.departs %> </div>
  <div>Destination Airport: <%= flight.destination.airport %> </div>
  <div>Arrival Time: <%= flight.destination.arrival %></div>
  <h3>Update Destination Information</h3>
  <form action='/flights/<%= flight._id%>' method="POST">
    <div>Destination Airport:
      <select name="airport">
        <option value='AUS'>AUS</option>
        <option value='DAL'>DAL</option>
        <option value='LAX'>LAX</option>
        <option value='SEA'>SEA</option>
      </select></div>
    <div>Arrival Time:</div>
    <input type='datetime' name='arrival'>
    <input type='submit'>
    </form>
  <input name="seat" required pattern="[A-F][1-9]\d?">


<h4><a href='/flights'>Return to Flights</a></h4>